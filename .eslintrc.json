{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "overrides": [
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "tsconfigRootDir": ".",
    "project": "tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/strict-boolean-expressions": "warn",
    "@typescript-eslint/restrict-template-expressions": [
      "error",
      {
        "allowNumber": true,
        "allowAny": true,
        "allowBoolean": true
      }
    ]
  }
}
